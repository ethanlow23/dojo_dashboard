<html>
    <head>
        <title></title>
    </head>
    <body>
        <h1><%= @show_dojo.branch %> Dojo</h1>
        <p>Address: <%= @show_dojo.street %></p>
        <p>City: <%= @show_dojo.city %> State: <%= @show_dojo.state %></p>
        <p><a href='/'>Home</a> | <a href='/dojos/<%= @show_dojo.id %>/edit'>Edit</a></p>
        <h2>Student Roster</h2>
        <table>
            <tr>
                <td>First Name</td>
                <td>Last Name</td>
                <td>Email</td>
                <td>Actions</td>
            </tr>
            <% @all_students.each do |student| %>
                <tr>
                    <td><%= student.first_name %></td>
                    <td><%= student.last_name %></td>
                    <td><%= student.email %></td>
                    <td><a href='/dojos/<%= @show_dojo.id %>/students/<%= student.id %>'>Show</a> | <a href='/dojos/<%= @show_dojo.id %>/students/<%= student.id %>/edit'>Edit</a> | <a href='/dojos/<%= @show_dojo.id %>/students/<%= student.id %>' data-method='delete'>Delete</a></td>
                </tr>
            <% end %>
        </table>
        <a href='/dojos/<%= @show_dojo.id %>/students/new'>Add Student</a>
    </body>
</html>