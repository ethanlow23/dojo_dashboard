<html>
    <head>
        <title></title>
    </head>
    <body>
        <h1>New Student</h1>
        <form action='/dojos/<%= @branch.id %>/students' method='post'>
            <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'
            <p>First Name: <input type='text' name='student[first_name]'></p>
            <p>Last Name: <input type='text' name='student[last_name]'></p>
            <p>Email: <input type='text' name='student[email]'></p>
            <p>Dojo: <select name='student[dojo]'>
                <option value=><%= @branch.branch %>
            </select></p>
            <input type='submit' value='Create'>
        </form>
        <p><a href='/dojos/<%= @branch.id %>'>Home</a> | <a href='/dojos/<%= @branch.id %>'><%= @branch.branch %></a></p>
    </body>
</html>